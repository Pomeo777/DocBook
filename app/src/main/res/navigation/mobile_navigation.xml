<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ua.roman777.traumabook.presentation.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="@string/main_page_title">
        <action
            android:id="@+id/action_nav_home_to_patientPhotoFragment"
            app:destination="@id/patientPhotoFragment" />
        <action
            android:id="@+id/action_nav_home_to_changePatientDataFragment"
            app:destination="@id/changePatientDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="ua.roman777.traumabook.presentation.ui.gallery.GalleryFragment"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_patientPhotoFragment"
            app:destination="@id/patientPhotoFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="ua.roman777.traumabook.presentation.ui.slideshow.SlideshowFragment"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/patientPhotoFragment"
        android:name="ua.roman777.traumabook.presentation.ui.photoViewer.PatientPhotoFragment"
        android:label="fragment_patient_photo"
        tools:layout="@layout/fragment_patient_photo" >
        <argument
            android:name="photoList"
            app:argType="ua.roman777.domain.models.Photo[]" />
        <argument
            android:name="patientName" />
        <argument
            android:name="imgPosition"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/changePatientDataFragment"
        android:name="ua.roman777.traumabook.presentation.ui.editPatient.EditPatientDataFragment"
        android:label="fragment_change_patient_data"
        tools:layout="@layout/fragment_change_patient_data" >
        <argument
            android:name="patient"
            app:argType="ua.roman777.domain.models.Patient"/>
    </fragment>


</navigation>