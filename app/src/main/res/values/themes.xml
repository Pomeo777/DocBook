<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TraumaBook" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryDark">@color/light_blue_A200</item>
        <item name="colorAccent">@color/light_blue_A200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TraumaBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TraumaBook.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TraumaBook.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ThemeOverlay.TraumaBook.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>